<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">26sp</item>
        


    </style>

    <style name="Gray.Button" parent="Base.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="Orange.Button" parent="Base.Button">
    <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="GrayDark.Button" parent="Base.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/darkGray</item>
    </style>




    </resources>

